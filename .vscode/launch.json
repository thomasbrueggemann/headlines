	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug API",
			"cargo": {
				"args": [
					"build",
					"--bin=api",
					"--package=headlines"
				],
				"filter": {
					"name": "api",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug Crawler",
			"cargo": {
				"args": [
					"build",
					"--bin=crawler",
					"--package=headlines"
				],
				"filter": {
					"name": "crawler",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'headlines'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=headlines",
					"--package=headlines"
				],
				"filter": {
					"name": "headlines",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}